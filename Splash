        /* Create and display the form */
        SplashScreen sp = new SplashScreen();
        sp.setVisible(true);
         try {
            for (int i=0;i<=100;i++){
                Thread.sleep(100);
                sp.loadingvalue.setText(Integer.toString(i) + "%");
                
                if (i==10){
                    sp.Loading.setText("Encendido de Módulos...");
                }
                if (i==20){
                    sp.Loading.setText("Cargando Ejercicios...");
                }
                if (i==50){
                    sp.Loading.setText("Conectando Ventana Principal...");
                }
                if (i==70){
                    sp.Loading.setText("Gracias por la Espera...");
                }
                if (i==80){
                    sp.Loading.setText("Conexión Exitosa...");
                }
                sp.LoadingBar.setValue(i);
            }
             sp.dispose();
             Insti frm = new Insti();
                    frm.setVisible(true);
                    
        } catch (Exception e) {
           
        }
    }

